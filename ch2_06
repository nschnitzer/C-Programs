using namespace std;

int main()
{
	string name;
	double studyHours;
	
	cout << "Please enter the name" << endl;
	cin >> name;
	
	cout << "Please enter the number of study hours" << endl;
	cin >> studyHours;
	
	cout << "Hello, " << name << "! on Saturday you need to study " << studyHours << " hours for the exam" << endl;
}